RewriteEngine On

# Redirect www to non-www
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Projects page rewrite
RewriteRule ^projects/?$ pages/projects/project.html [L]

# Certificate page rewrite
RewriteRule ^certificates/?$ pages/certificate/certificate.html [L]

# Redirect old paths to new clean URLs (301 redirect)
RewriteCond %{THE_REQUEST} \s/pages/projects/project\.html [NC]
RewriteRule ^ /projects? [R=301,L]

RewriteCond %{THE_REQUEST} \s/pages/certificate/certificate\.html [NC]
RewriteRule ^ /certificates? [R=301,L]